<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_lock"
            android:layout_width="@dimen/_150dp"
            android:layout_height="@dimen/_181dp"
            android:layout_marginTop="@dimen/_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_password" />

        <TextView
            android:id="@+id/tv_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_16dp"
            android:letterSpacing="0.02"
            android:text="@string/enter_your_pass_code"
            android:textSize="@dimen/_20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_lock" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44dp"
            android:layout_marginHorizontal="@dimen/_32dp"
            android:layout_marginTop="@dimen/_16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_input">

            <EditText
                android:id="@+id/pc_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_8dp"
                android:inputType="numberPassword"
                android:layout_weight="1"
                android:clickable="false"
                android:focusable="false"
                android:background="@drawable/bg_number"
                android:gravity="center" />

            <EditText
                android:id="@+id/pc_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_8dp"
                android:inputType="numberPassword"
                android:layout_weight="1"
                android:clickable="false"
                android:focusable="false"
                android:background="@drawable/bg_number"
                android:gravity="center" />

            <EditText
                android:id="@+id/pc_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_8dp"
                android:layout_weight="1"
                android:inputType="numberPassword"
                android:clickable="false"
                android:focusable="false"
                android:background="@drawable/bg_number"
                android:gravity="center" />

            <EditText
                android:id="@+id/pc_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_8dp"
                android:layout_weight="1"
                android:inputType="numberPassword"
                android:clickable="false"
                android:focusable="false"
                android:background="@drawable/bg_number"
                android:gravity="center" />

            <EditText
                android:id="@+id/pc_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_8dp"
                android:layout_weight="1"
                android:clickable="false"
                android:focusable="false"
                android:background="@drawable/bg_number"
                android:gravity="center"
                android:inputType="numberPassword" />

            <EditText
                android:id="@+id/pc_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_8dp"
                android:layout_weight="1"
                android:clickable="false"
                android:focusable="false"
                android:background="@drawable/bg_number"
                android:gravity="center"
                android:inputType="numberPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/number1"
                    style="@style/NumberInPasscode"
                    android:layout_margin="@dimen/_2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_number_passcode"
                    android:text="@string/_1" />

                <TextView
                    android:id="@+id/number2"
                    style="@style/NumberInPasscode"
                    android:layout_margin="@dimen/_2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_number_passcode"
                    android:text="@string/_2" />

                <TextView
                    android:id="@+id/number3"
                    style="@style/NumberInPasscode"
                    android:layout_margin="@dimen/_2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_number_passcode"
                    android:text="@string/_3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/number4"
                    style="@style/NumberInPasscode"
                    android:layout_margin="@dimen/_2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_number_passcode"
                    android:text="@string/_4" />

                <TextView
                    android:id="@+id/number5"
                    style="@style/NumberInPasscode"
                    android:layout_margin="@dimen/_2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_number_passcode"
                    android:text="@string/_5" />

                <TextView
                    android:id="@+id/number6"
                    style="@style/NumberInPasscode"
                    android:layout_margin="@dimen/_2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_number_passcode"
                    android:text="@string/_6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/number7"
                    style="@style/NumberInPasscode"
                    android:layout_margin="@dimen/_2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_number_passcode"
                    android:text="@string/_7" />

                <TextView
                    android:id="@+id/number8"
                    style="@style/NumberInPasscode"
                    android:layout_margin="@dimen/_2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_number_passcode"
                    android:text="@string/_8" />

                <TextView
                    android:id="@+id/number9"
                    style="@style/NumberInPasscode"
                    android:layout_margin="@dimen/_2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_number_passcode"
                    android:text="@string/_9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/numberB"
                    style="@style/NumberInPasscode"
                    android:layout_margin="@dimen/_2dp"
                    android:layout_weight="1"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/number0"
                    style="@style/NumberInPasscode"
                    android:layout_margin="@dimen/_2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_number_passcode"
                    android:text="@string/_0" />

                <ImageView
                    android:id="@+id/backspace"
                    style="@style/NumberInPasscode"
                    android:layout_margin="@dimen/_2dp"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_backspace" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
